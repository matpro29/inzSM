{% extends 'base.html.twig' %}

{% block title %}Twoje oceny{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Twoje oceny ✅</h1>

        {% for grade in sectionsGrades %}
            {{ grade.section.name }} => {{ grade.grade.grade }}
            </br>
        {% endfor %}
        {% if courseGrade is not null %}
            {{ courseGrade.course.name }} => {{ courseGrade.grade.grade }}
        {% endif %}
        </br>
        <a href="{{ path('grade_index') }}">Wróć</a>
    </div>
{% endblock %}
