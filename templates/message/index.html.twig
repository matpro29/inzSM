{% extends 'base.html.twig' %}

{% block title %}Rozmowy użytkownika{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Rozmowy użytkownika ✅</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Użytkownik</th>
                    <th>Użytkownik</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
            {% for userMessage in userMessages %}
                <tr>
                    <td>{{ userMessage.id }}</td>
                    <td>{{ userMessage.user_receiver.username }}</td>
                    <td>{{ userMessage.user_sender.username }}</td>
                    <td>
                        <a href="{{ path('message_show', {'id': userMessage.id}) }}">Wejdź</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Nie znaleziono rozmów!</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </br>
        <a href="{{ path('index') }}">Wróć</a>
    </div>
{% endblock %}
