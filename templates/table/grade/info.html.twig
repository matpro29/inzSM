{% extends 'base.html.twig' %}

{% block title %}Informacje o ocenie{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Informacje o ocenie ✅</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ grade.id }}</td>
            </tr>
            <tr>
                <th>Ocena</th>
                <td>{{ grade.grade }}</td>
            </tr>
            </tbody>
        </table>
        {{ include('table/grade/form/_delete_form.html.twig', {'button_label': 'Usuń ocenę'}) }}
        </br>
        <a href="{{ path('grade_edit', {'id': grade.id}) }}">Edytuj</a>
        </br>
        <a href="{{ path('grade_index') }}">Wróć</a>
    </div>
{% endblock %}
