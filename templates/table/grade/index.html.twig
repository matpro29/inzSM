{% extends 'base.html.twig' %}

{% block title %}Oceny{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Oceny ✅</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Ocena</th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>
            {% for grade in grades %}
                <tr>
                    <td>{{ grade.id }}</td>
                    <td>{{ grade.grade }}</td>
                    <td>
                        <a href="{{ path('grade_edit', {'id': grade.id}) }}">Edytuj</a>
                        <a href="{{ path('grade_info', {'id': grade.id}) }}">Pokaż</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Nie znaleziono ocen!</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </br>
        <a href="{{ path('grade_new') }}">Dodaj ocenę</a>
        </br>
        <a href="{{ path('index') }}">Wróć</a>
    </div>
{% endblock %}
