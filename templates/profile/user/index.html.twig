{% extends 'base.html.twig' %}

{% block title %}Użytkownik{% endblock %}

{% block body %}

    <div class="container">
        <h1>{% trans %}Użytkownik{% endtrans %}</h1>

        <div class="listtable"><div class="row"><div class="col-md-3 pad bold">{% trans %}Id{% endtrans %}</div><div class="col-md-9 pad"> {{ user.id }}</div></div></div>
        <div class="listtable"><div class="row"><div class="col-md-3 pad bold">{% trans %}Użytkownik{% endtrans %}</div><div class="col-md-9 pad">{{ user.username }}</div></div></div>
        <div class="listtable"><div class="row"><div class="col-md-3 pad bold">{% trans %}Role{% endtrans %}</div><div class="col-md-9 pad"> {{ user.roles ? user.roles|join(', ') : '' }}</div></div></div>
        <div class="listtable"><div class="row"><div class="col-md-3 pad bold">{% trans %}Hasło{% endtrans %}</div><div class="col-md-9 pad">{{ user.password }}</div></div></div>
        </br>
        <a href="{{ path('profile_edit') }}"  class="btn">Edytuj swoje dane</a>
        </br>
        </br>
        <a href="{{ path('index') }}"  class="back">{% trans %}Wróć{% endtrans %}</a>
    </div>
{% endblock %}