{% extends 'base.html.twig' %}

{% block title %}Powiadomienia{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Powiadomienia ✅</h1>

        {% if not is_granted('ROLE_TEACHER') %}
        <table class="table">
            <thead>
                <tr>
                    <th>Kurs</th>
                    <th>Powiadomienie</th>
                </tr>
            </thead>
            <tbody>
            {% for notice in notices %}
                <tr>
                    <td>{{ notice.course.name }}</td>
                    <td>{{ notice.notice }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </br>
        {% endif %}
        <table class="table">
            <thead>
            <tr>
                <th>Powiadomienie</th>
            </tr>
            </thead>
            <tbody>
            {% for notice in noticesAdmin %}
                <tr>
                    <td>{{ notice.notice }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </br>
        <a href="{{ path('index') }}">Wróć</a>
    </div>
{% endblock %}
