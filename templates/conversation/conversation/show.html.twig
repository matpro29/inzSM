{% extends 'base.html.twig' %}

{% block title %}Wiadomości{% endblock %}

{% block body %}

    <div class="container">
        <h1>Wiadomości</h1>

        <a href="{{ path('conversation_user_search', {'id': conversation.id}) }}" class="btn">Użytkownicy</a>

        </br>
        <a href="{{ path('conversation_user_index', {'id': conversation.id}) }}" class="btn delete">Użytkownicy zapisani</a> </br>
        <div class="row chat">
        {% for message in messages %}




            {% if user.id == message.owner.id %}
            <section class="me">
                <section class="msgs">
                    <p>
                        {{ message.message }}
                    </p>
                </section>
            </section>

            {% else %}
                <section class="them">
                    <img  src='https://ioneglobalgrind.files.wordpress.com/2014/03/screen-shot-2014-03-05-at-1-00-58-pm.png' /></br>
                    {#{{ message.owner.username }}#}
                    <section class="msgs">
                        <p>
                            {{ message.message }}
                        </p>
                    </section>
                </section>

{% endif %}









            {% else %}
             Nie znaleziono wiadomości!
            {% endfor %} </div>
        </br>
        {{ include('conversation/conversation/form/_message_new_form.html.twig', {'button_label': 'Napisz'}) }}
        </br>  </br>
        <a href="{{ path('conversation_index') }}" class="back">Wróć</a>
    </div>
{% endblock %}
