{% extends 'base.html.twig' %}

{% block title %}Rozmowy użytkownika{% endblock %}

{% block body %}


    <div class="container">
        <h1>Rozmowy użytkownika</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>
            {% for conversation in conversations %}
                <tr>
                    <td>{{ conversation.id }}</td>
                    <td>
                        <a href="{{ path('conversation_show', {'id': conversation.id}) }}">Wejdź</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Nie znaleziono rozmów!</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ include('conversation/conversation/form/_new_form.html.twig', {'button_label': 'Nowa rozmowa'}) }}
        </br>
        <a href="{{ path('index') }}">Wróć</a>
    </div>
{% endblock %}
