{% extends 'base.html.twig' %}

{% block title %}Użytkownicy rozmowy{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Użytkownicy rozmowy ✅</h1>

        <a href="{{ path('conversation_user_search', {'id': conversation.id}) }}">Szukaj użytkowników</a>
        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Użytkownik</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Nie znaleziono użytkowników!</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </br>
        <a href="{{ path('conversation_show', {'id': conversation.id}) }}">Wróć</a>
    </div>
{% endblock %}
