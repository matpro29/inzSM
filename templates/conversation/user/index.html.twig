{% extends 'base.html.twig' %}

{% block title %}Użytkownicy rozmowy{% endblock %}

{% block body %}

    <div class="container">
        <h1>Użytkownicy rozmowy</h1>

        <div class="headertable"> <div class="row"><div class="col-md-9">{% trans %}Użytkownik{% endtrans %}</div><div class="col-md-3">{% trans %}Akcje{% endtrans %}</div></div></div>

        {% for user in users %}
            <div class="listtable">
                <div class="row">
                    <div class="col-md-9 pad">{{ user.username }}</div>
                    <div class="col-md-3 pad"> <a href="{{ path('conversation_user_delete', {'conversationId': conversation.id, 'userId': user.id}) }}">Usuń</a></div></div>
            </div>
        {% else %}

            Nie znaleziono użytkowników!

        {% endfor %}

        </br> </br>
        <a href="{{ path('conversation_show', {'id': conversation.id}) }}" class="back">{% trans %}Wróć{% endtrans %}</a>
    </div>
{% endblock %}
