{% extends 'base.html.twig' %}

{% block title %}Szukaj użytkowników{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Szukaj użytkowników ✅</h1>

        {{ include('conversation/user/form/_search_form.html.twig', {'button_label': 'Szukaj'}) }}
        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Użytkownik</th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>
                        <a href="{{ path('conversation_user_add', {'conversationId': conversation.id, 'userId': user.id}) }}">Dodaj</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Nie znaleziono użytkowników!</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </br>
        <a href="{{ path('conversation_user_index', {'id': conversation.id}) }}" class="back">{% trans %}Wróć{% endtrans %}</a>
    </div>
{% endblock %}
