{% extends 'base.html.twig' %}

{% block title %}Użytkownicy kursu{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Użytkownicy kursu ✅</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Użytkownik</th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>
                        <a href="{{ path('course_user_info', {'id_course': course.id, 'id_user': user.id}) }}">Pokaż</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Nie znaleziono kursów!</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </br>
        <a href="{{ path('course_show', {'id': course.id}) }}">Wróć</a>
    </div>
{% endblock %}