{% extends 'base.html.twig' %}

{% block title %}Kurs{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Kurs ✅</h1>

        <a href="{{ path('course_user', {'id': course.id}) }}">Użytkownicy</a>
        </br>
        <a href="{{ path('course_section_new', {'id': course.id}) }}">Nowa skecja</a>
        </br>
        {% for section in sections %}
            <h2>{{ section.name }}</h2>
            <a href="{{ path('course_task_new', {'id': section.id}) }}">Nowe zadanie</a>
            {{ include('course/section/form/_delete_form.html.twig', {'button_label': 'Usuń sekcje'}) }}
            </br>
            {% for task in section.tasks %}
                <h3>{{ task.name }}</h3>
                {{ task.contents }}
            {%  else %}
                <h3>Nie znaleziono zadań!</h3>
            {% endfor %}
        {% else %}
            <h3>Nie znaleziono sekcji!</h3>
        {% endfor %}
        </br>
        <a href="{{ path('course_index') }}">Wróć</a>
    </div>
{% endblock %}
