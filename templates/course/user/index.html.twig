{% extends 'base.html.twig' %}

{% block title %}Użytkownicy kursu{% endblock %}

{% block body %}

    <div class="container">
        <h1>Użytkownicy kursu</h1>

        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Użytkownik</th>
                <th>Role</th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                    <td>
                        <a href="{{ path('course_user_info', {'id': user.id}) }}">Pokaż</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Nie znaleziono użytkowników!</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </br>
        <a href="{{ path('course_show', {'id': course.id}) }}">Wróć</a>
    </div>
{% endblock %}
